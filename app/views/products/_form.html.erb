
<%= simple_form_for (@product), html: { multipart: true } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input_field :novel , collection: Product::NOVEL, prompt: "ジャンル"%>
    <br>
    <%= f.input :model ,required: true, input_html: { class:"input"}, wrapper: false,
    label_html: { class:"label" }%>
    <%= f.input :description %>
    <%= f.input :title  ,required: true, input_html: { class:"input"}, wrapper: false,
    label_html: { class:"label" }%>
    <%= f.input :price ,required: true, input_html: { class:"input", maxlength: 7 }, wrapper: false,
    label_html: { class:"label" }%>
    <br>
    <%= f.input_field :finish , collection: Product::FINISH, prompt: "オススメ度"%>

   
    <%= f.input :image , as: :file, input_html: {class:"file-input prodcut-image"},
    label: false, wrapper: false %>
    <span class="file-cta">
    <span class="file-icon"><i class="fa fa-upload"></i></span>
    <span class="file-label">
    </span>
    </span>
    <output id="list"></output>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <br>
    <%= link_to 'Cancel', products_path %>
  </div>
<% end %>
